#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_text-to-svg@3.1.5@text-to-svg/bin/text-to-svg" "$@"
  ret=$?
else 
  node  "$basedir/../_text-to-svg@3.1.5@text-to-svg/bin/text-to-svg" "$@"
  ret=$?
fi
exit $ret
